# Set the status bar color
set -g status-style bg=yellow,fg=black

# Set the left side of the status bar
set -g status-left "#[fg=black,bg=yellow] [#S] #[fg=yellow,bg=default,nobold,nounderscore,noitalics]│"

# Set the right side of the status bar
set -g status-right "#[fg=yellow,bg=default,nobold,nounderscore,noitalics]│#[fg=black,bg=yellow] %H:%M "

# Set the window list colors and format
set-window-option -g window-status-current-style fg=black,bg=green
set-window-option -g window-status-current-format " #I:#W#F "
set-window-option -g window-status-style fg=black,bg=yellow
set-window-option -g window-status-format " #I:#W#F "

# Set the window separator
set -g window-status-separator ""

# Set the message text color
set -g message-style fg=black,bg=yellow
